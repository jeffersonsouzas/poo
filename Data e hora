import java.time.LocalDate;
import java.time.format.DateTimeFormatter;

localDate hoje = localDate.now(); //Data atual
DateTimeFormatter formatoBrasil = DateTimeFormatter.ofPattern("dd/MM/yyyy"); //Converter para o formato Brasileiro
System.out.println(hoje.format(formatoBrasil));

